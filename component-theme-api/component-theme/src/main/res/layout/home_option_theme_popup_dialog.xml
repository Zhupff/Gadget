<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="the.gadget.theme.Colour"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/translucentBackgroundColor">

        <the.gadget.weight.common.CommonLinearLayout
            android:id="@+id/content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:fitNavigationBar="true"
            app:tlCornerRadius="@dimen/cornerRadiusMax"
            app:trCornerRadius="@dimen/cornerRadiusMax"
            android:orientation="vertical"
            android:visibility="invisible"
            themeBackgroundColor="@{Colour.Background}"
            tools:background="@color/themeBackground"
            tools:visibility="visible">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center"
                android:textSize="@dimen/textSizeMin"
                android:text="注：图片可能会被压缩至合适尺寸以保持性能！"
                themeTextColor="@{Colour.Outline}"
                tools:textColor="@color/themeOutline"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                themeBackgroundColor="@{Colour.Outline}"
                tools:background="@color/themeOutline"/>
            <TextView
                android:id="@+id/tv_from_camera"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="拍摄"
                android:textSize="@dimen/textSizeMax"
                android:gravity="center"
                themeTextColor="@{Colour.OnBackground}"
                tools:textColor="@color/themeOnBackground"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                themeBackgroundColor="@{Colour.Outline}"
                tools:background="@color/themeOutline"/>
            <TextView
                android:id="@+id/tv_from_album"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="从相册选择"
                android:textSize="@dimen/textSizeMax"
                android:gravity="center"
                themeTextColor="@{Colour.OnBackground}"
                tools:textColor="@color/themeOnBackground"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                themeBackgroundColor="@{Colour.Outline}"
                tools:background="@color/themeOutline"/>
            <TextView
                android:id="@+id/tv_reset"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="恢复默认"
                android:textSize="@dimen/textSizeMax"
                android:gravity="center"
                themeTextColor="@{Colour.OnBackground}"
                tools:textColor="@color/themeOnBackground"/>
        </the.gadget.weight.common.CommonLinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>