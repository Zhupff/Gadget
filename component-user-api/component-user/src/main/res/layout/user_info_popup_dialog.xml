<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="the.gadget.theme.Colour"/>
        <variable name="user" type="the.gadget.component.user.User" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/translucentBackgroundColor">

        <the.gadget.weight.common.CommonConstraintLayout
            android:id="@+id/content"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.75"
            app:fitNavigationBar="true"
            app:tlCornerRadius="@dimen/cornerRadiusMax"
            app:trCornerRadius="@dimen/cornerRadiusMax"
            android:clickable="true"
            android:focusable="true"
            android:visibility="invisible"
            themeBackgroundColor="@{Colour.Background}"
            tools:visibility="visible"
            tools:background="@color/themeBackground">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/marginMax"
                android:text="个人信息"
                android:textSize="@dimen/textSizeMax"
                android:textStyle="bold"
                themeTextColor="@{Colour.OnBackground}"
                tools:textColor="@color/themeOnBackground"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                android:layout_margin="@dimen/marginMax"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    themeBackgroundColor="@{Colour.Outline}"
                    tools:background="@color/themeOutline"/>
                <RelativeLayout
                    android:id="@+id/avatar_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/paddingMax">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="头像"
                        android:textSize="@dimen/textSizeMax"
                        themeTextColor="@{Colour.OnBackground}"
                        tools:textColor="@color/themeOnBackground"/>
                    <the.gadget.weight.common.CommonImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        app:allCornerRadius="@dimen/cornerRadiusMax"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@id/iv_avatar_arrow"
                        android:layout_marginEnd="@dimen/marginMin"
                        foregroundBitmap="@{user.avatar}"
                        themeBackgroundColor="@{Colour.PrimaryContainer}"
                        tools:background="@color/themePrimaryContainer"/>
                    <ImageView
                        android:id="@+id/iv_avatar_arrow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow_forward"
                        themeForegroundTint="@{Colour.Outline}"
                        tools:tint="@color/themeOutline"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    themeBackgroundColor="@{Colour.Outline}"
                    tools:background="@color/themeOutline"/>
                <RelativeLayout
                    android:id="@+id/nickname_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/paddingMax">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="昵称"
                        android:textSize="@dimen/textSizeMax"
                        themeTextColor="@{Colour.OnBackground}"
                        tools:textColor="@color/themeOnBackground"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@id/iv_nickname_arrow"
                        android:layout_marginEnd="@dimen/marginMin"
                        android:text="@{user.nickname}"
                        android:textSize="@dimen/textSizeMax"
                        themeTextColor="@{Colour.Outline}"
                        tools:textColor="@color/themeOutline"/>
                    <ImageView
                        android:id="@+id/iv_nickname_arrow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow_forward"
                        themeForegroundTint="@{Colour.Outline}"
                        tools:tint="@color/themeOutline"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    themeBackgroundColor="@{Colour.Outline}"
                    tools:background="@color/themeOutline"/>
            </LinearLayout>

        </the.gadget.weight.common.CommonConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>